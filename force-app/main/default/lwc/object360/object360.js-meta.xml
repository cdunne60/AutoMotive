<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Object 360 Static</masterLabel>
    <description>Any object 360.</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage, lightning__RecordPage">
            <property name="showProgress" type="Boolean" default="true"  label="Include Path"></property>
            <property name="label" type="String" label="Label" default="" required="true"/>
            <property name="qualifiedFieldName" type="String" label="Qualified Field Name" description="Qualified field name of the picklist field. Eg: Account.Rating" default="" required="true"/>
            <property name="object" type="String" label="Object API Name" default="{!objectApiName}" />
            <property name="recordId" type="String" label="Record Id" description="Automatically binds the page's record id to the component variable, default value contextually obtains record Id from Lightning page, this can also be set explicitly" />
            <property name="userType" type="String"  label="Field Name" default=""></property>
            <property name="backgroundImage" type="String" label="Profile Card Background Photo" default="" />
            <property name="name" type="String" label="Name" default="" />
            <property name="nameLabel" type="String" label="User Address Field" default="" />
            <property name="userAvatar" type="String" label="User Profile Picture" default="" />
           
           
            <property name="metric1" type="String" label="Metric 1 Name" default="" />
            <property name="metric1Icon" type="String" label="Metric 1 Icon" default="" />
            <property name="metric1IconSize" type="String" label="Metric 1 Icon Size" default="" />
